    ],
    "installer": {
        "script": [
            "# handle runtime cache",
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name cetacea) scripts/Utils.psm1)",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\" -Target \"$env:APPDATA\\Folo\"",
            "Remove-Module -Name Utils"
        ]
    },
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name cetacea) scripts/Utils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\Folo\"",
            "Remove-Module -Name Utils"
        ]
    },
    "bin": "Folo.exe",
    "shortcuts": [
        [
            "Folo.exe",
            "Folo"
        ]
    ],
    "checkver": {
        "github": "https://github.com/RSSNext/Folo"
    },
